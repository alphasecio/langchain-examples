{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "/text-summary/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "streamlit run streamlit_app.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
